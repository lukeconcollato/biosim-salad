#!/bin/bash

# Run the BioSim server in headless mode
# Usage: run-biosim-headless [port]

# Get the directory of this script
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Go to the project root directory
cd "$DIR/.."

# Default port
PORT=8080

# Parse command line arguments
if [ $# -gt 0 ]; then
    PORT=$1
fi

# Run the server using Maven
mvn exec:java -Dexec.mainClass="com.traclabs.biosim.server.framework.BiosimServer" -Dexec.args="$PORT"
